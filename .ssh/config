# All hosts with a quorum require more settings
Host quorum-*
    User ubuntu

# All hosts with a quorum require more settings
Host quorum-*
    User ubuntu
    IdentityFile ~/.ssh/quorum-fall-2017.pem
    ProxyCommand ssh -A bastion -W %h:%p

# all quorum databases
Host db-quorum-*
    HostName ec2-52-206-129-115.compute-1.amazonaws.com
    Port 27
    User jackh

# all databases
Host db-*
    # ExitOnForwardFailure yes
    ControlMaster no
    ControlPath no
    ControlPersist no

# make sure the host stays alive
Host *
    ControlMaster auto
    ControlPath /tmp/ssh-%r@%h:%p
    ControlPersist 300
    HashKnownHosts yes
    ServerAliveInterval 100
    ServerAliveCountMax 3
    StrictHostKeyChecking no

Host estunnel
    HostName ec2-52-206-129-115.compute-1.amazonaws.com
    User jackh
    Port 27
    LocalForward 9200 vpc-quorum-logging-wz73ocv25vhsu6abm32gyc3ttm.us-east-1.es.amazonaws.com:443

