# For github usage
Host github.com
    HostName github.com
    User git

# Quorum Bastion
Host bastion
    HostName ec2-52-206-129-115.compute-1.amazonaws.com
    User jackh
    Port 27

Host bastion-root
    HostName ec2-52-206-129-115.compute-1.amazonaws.com
    User ubuntu
    Port 27
    IdentityFile ~/.ssh/quorum-fall-2017.pem

# Quorum Servers
Host q
    HostName ec2-54-165-114-139.compute-1.amazonaws.com
    User jackh
    ProxyCommand ssh -A bastion -W %h:%p

